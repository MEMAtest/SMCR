# Copy this file to .env and supply your actual configuration values.

# Database Configuration
# Example PostgreSQL connection string:
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DATABASE_URL=""

# Authentication (Development)
# Set to 'true' to disable authentication for local development
# When disabled, all API endpoints work without login
# For production, remove this or set to 'false'
DISABLE_AUTH=true

# NextAuth.js (only needed when DISABLE_AUTH=false)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Email Provider (only needed when DISABLE_AUTH=false)
# Configure for magic link authentication
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@example.com

# MEMA Tool Integration Links
# These URLs can be customized for different deployment environments
NEXT_PUBLIC_MEMA_VULNERABILITY_URL=https://vulnerability.memaconsultants.com
NEXT_PUBLIC_MEMA_FINES_URL=https://fcafines.memaconsultants.com

# Optional: Future authentication tokens for MEMA services
# MEMA_API_KEY=your_api_key_here
# MEMA_API_SECRET=your_api_secret_here
