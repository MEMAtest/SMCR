# Copy this file to .env and supply your actual configuration values.

# Database Configuration
# Example PostgreSQL connection string:
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DATABASE_URL=""

# Authentication (Development)
# Set to 'true' to disable authentication for local development
# When disabled, all API endpoints work without login
# For production, remove this or set to 'false'
DISABLE_AUTH=true

# NextAuth.js (only needed when DISABLE_AUTH=false)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Email Provider
# Used for magic link authentication when DISABLE_AUTH=false, and for board pack sharing via email.
#
# Safety: when DISABLE_AUTH=true, outbound email is disabled by default.
# Set ALLOW_DEV_EMAIL=true to allow sending in that mode.
ALLOW_DEV_EMAIL=false
#
# Option A (recommended for app emails): Resend API
# RESEND_API_KEY=your_resend_api_key
# EMAIL_FROM=your-verified-sender@yourdomain.com
#
# Option B: Amazon SES (API) (attachments require ses:SendRawEmail)
# AWS_REGION=eu-west-2
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# EMAIL_FROM=alerts@memaconsultants.com
#
# Option C: SMTP (also used by NextAuth EmailProvider; SES SMTP also works here)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=your-email@example.com

# MEMA Tool Integration Links
# These URLs can be customized for different deployment environments
NEXT_PUBLIC_MEMA_VULNERABILITY_URL=https://vulnerability.memaconsultants.com
NEXT_PUBLIC_MEMA_FINES_URL=https://fcafines.memaconsultants.com

# Optional: Future authentication tokens for MEMA services
# MEMA_API_KEY=your_api_key_here
# MEMA_API_SECRET=your_api_secret_here
